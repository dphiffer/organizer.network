<div class="replies<% if (message.replies.length == 0) { %> no-replies<% } %>">
	<div class="replies-list">
		<% for (let reply of message.replies) { %>
			<%- include('message', {
				message: reply,
				context: context
			}) %>
		<% } %>
	</div>
	<form action="/api/send" method="post" class="reply-form">
		<input type="hidden" name="in_reply_to" value="<%= message.id %>">
		<input type="hidden" name="context_id" value="<%= context.id %>">
		<textarea id="content" name="content" cols="80" rows="3" placeholder="type your message here."></textarea>
		<div class="keyboard-shortcut hidden">
			<div class="help macos hidden">âŒ˜ + enter to send message</div>
			<div class="help other hidden">ctrl + enter to send message</div>
		</div>
		<input type="submit" value="Send reply â†’">
		<div class="response"></div>
	</form>
</div>
